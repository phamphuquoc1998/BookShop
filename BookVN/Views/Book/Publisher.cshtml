
@{
    ViewBag.Title = "Index";
    var user = Session["User"] as BookVN.Models.User;
}

<!--Logo - thanh tìm kiếm - Giỏ hàng-->
@Html.Partial("_LogoSearchCart")

<!--Thanh lọc thể loại- Trang hiển thị-->
<div class="row m-2">
    <!-- Thanh lọc thể loại-->
    <div class="col-3">
        <h6 class="list-group-item active text-center">Danh sách nhà cung cấp</h6>
        @foreach (var publisher in ViewBag.ListPublisher)
        {
            if (publisher.IsActive == true)
            {
                <a class="list-group-item list-group-item-action" href="~/Book/Publisher/@publisher.PublisherID">@publisher.PublisherName</a>
            }
        }
        <a class="list-group-item list-group-item-action" href="~/Home/Discount">Sách giảm giá</a>
        <a class="list-group-item list-group-item-action" href="~/Home/AllBook">Tất cả các sách</a>
    </div>

    @Html.Partial("_AllBookofPublisher")
</div>
